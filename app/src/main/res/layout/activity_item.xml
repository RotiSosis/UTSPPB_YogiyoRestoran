<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baba Ganosh"
            android:textSize="40dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_marginRight="3dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:text="@string/rating"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/biaya_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/minPemesanan"/>

        <TextView
            android:id="@+id/biaya_kirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biaya Pengiriman : Rp.8.000"/>

        <TextView
            android:id="@+id/waktu_pengiriman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Pengiriman : 30menit"/>

        <TextView
            android:id="@+id/jarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jarak : 3.1km"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="30dp"
            android:onClick="onDeafultToggleClick"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/ic_baseline_share_24"/>

        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/tonggle_selector"
            android:onClick="onCustomToggleClick"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

</LinearLayout>